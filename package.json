  },
  "files": [
    "build-output/",
    "build-output-usage-example/",
    "license.txt",
    "README.md"
  ],
  "dependencies": {
    "parallelshell": "latest",
    "opener": "latest",
    "http-server": "danielweck/http-server"
  },
  "devDependencies": {
    "requirejs": "latest",
    "almond": "latest",
    "jquery": "latest",
    "pegjs": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-jasmine": "latest",
    "karma-sauce-launcher": "latest",
    "cson": "latest",
    "rimraf": "latest",
    "cpy": "latest",
    "ncp": "latest",
    "mkdirp": "latest",
    "watch": "latest",
    "jshint": "latest",
    "glob": "latest"
  },
  "scripts": {
    "cson2json": "node node_modules/cson/bin/cson2json package.cson && node node_modules/cson/bin/cson2json package.cson > package.json",
    "prepare": "npm run prepare:dependencies",
    "prepare:dependencies": "npm install && npm update",
    "clean": "node --version && npm --version && node node_modules/rimraf/bin.js build-output/* && node node_modules/rimraf/bin.js gen/*",
    "prebuild": "npm run clean",
    "build": "npm run build:scripts",
    "lint": "node readium-build-tools/jshint_glob.js js/**.js",
    "prebuild:scripts": "npm run build:scripts:peg",
    "build:scripts": "npm run build:scripts:multiple && npm run build:scripts:single",
    "build:scripts:peg": "node ./node_modules/pegjs/bin/pegjs --export-var EPUBcfiParser cfi_parser.pegjs gen/cfi_parser_gen.js",
    "build:scripts:multiple": "node node_modules/requirejs/bin/r.js -o readium-build-tools/RequireJS_config.js --rjs_bundle=multiple",
    "build:scripts:single": "node node_modules/requirejs/bin/r.js -o readium-build-tools/RequireJS_config.js --rjs_bundle=single",
    "example:watch": "echo > open_webbrowser.js && parallelshell \"npm run watch\" \"npm run http\"",
    "example": "parallelshell \"npm run http\" \"npm run webbrowser\"",
    "test": "node node_modules/karma/bin/karma start tests/karma.conf.js --singleRun",
    "test:travis": "node node_modules/karma/bin/karma start tests/karma.travis.conf.js",
    "watch": "node node_modules/watch/cli.js \"npm run build && npm run test && node readium-build-tools/webbrowser.js && npm run webbrowser && node node_modules/rimraf/bin.js open_webbrowser.js\" build-output-usage-example/ js/ tests/",
    "http": "http-server -p 9090 --cors ./",
    "webbrowser": "opener http://127.0.0.1:9090/build-output-usage-example/"
  }
}